[train] #train parameters
epoch = 128
batch_size = 16

reader_num = 0

optimizer = adamw
learning_rate = 0.001
weight_decay = 0
step_size = 1
lr_multiplier = 1

max_len = 128

[distributed]
use = True
backend = nccl

[eval] #eval parameters
batch_size = 64

reader_num = 0

[prompt]
prompt_tune = True
prompt_len = 100
prompt_num = 100

[data] #data parameters
train_dataset_type = tweetevalsentiment
train_formatter_type = tweetevalsentimentPromptRoberta
train_data_path = ./data/tweeteval/sentiment/train.json

matched = True
valid_dataset_type = tweetevalsentiment
valid_formatter_type = tweetevalsentimentPromptRoberta
valid_data_path = ./data/tweeteval/sentiment/dev.json


test_dataset_type = tweetevalsentiment
test_formatter_type = tweetevalsentimentPromptRoberta
test_data_path = ./data/tweeteval/sentiment/test.json

[model] #model parameters
model_base = Roberta
model_name = PromptRoberta
model_size = base

[output] #output parameters
output_time = 1
test_time = 1

model_path = ./model
model_name = tweetevalsentimentPromptRoberta

tensorboard_path = ./tensorboard

output_function = acc

tqdm_ncols = 150
